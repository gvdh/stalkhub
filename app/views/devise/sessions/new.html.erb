<div class="wrapper-form" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 50%), url(<%= image_path 'earth.png' %>);
  background-size: cover;">
  <div class="container">
    <div class="row">
      <div class="col-xs-12" id="action">
        <h2 class="text-center" id="title">STALK_<span>HUB</span></h2>
        <p class="text-center" id="sentence">What can be found about you on social medias ? <br> Find out now!</p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <div class="form">
          <h2 class="text-center">Log in</h2>
          <div class="row">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div>
              <%= f.input :email, required: false, autofocus: true, placeholder: "Email" %>
              <%= f.input :password, required: false, placeholder: "Password" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="text-center">
              <%= f.button :submit, "Log in" %>
            </div>
            <% end %>
            <div class="col-xs-12 text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
