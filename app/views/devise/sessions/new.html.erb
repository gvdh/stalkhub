<div class="wrapper form">
  <div class="container">
    <div class="row">
      <div class="col-xs-12" id="action">
        <h2 class="text-center" id="title">STALK_<span>HUB</span></h2>
        <p class="text-center" id="sentence">What can be found about you on social medias ? <br> Find out now!</p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3" id="form">
        <h2 class="text-center">Log in</h2>
        <div class="row">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions text-center">
            <%= f.button :submit, "Log in" %>
          </div>
          <% end %>
          <div class="col-xs-12 text-center">
            <%= render "devise/shared/links" %>
          </div>
      </div>
      </div>
    </div>
  </div>
</div>
