<% if @provider == 'twitter' %>
  <div id="result_card" class="<%= result.category %>">
    <div class="card_text">
      <p><%= result.text if result.text %></p>
    </div>
    <div class="card-media">
      <p><%= result.fan_count if result.fan_count %></p>
    </div>
    <div class="card_footer text-right">
      <p> <%= result.created_at.strftime("%b %d %Y") if result.created_at %></p>
    </div>
  </div>
<% else %>
  <div id="result_card" class="<%= result.category %> <%= result.privacy %>">
    <div class="card-media">
      <%= image_tag result.picture if result.picture %>
    </div>
    <div class="card_text">
      <p><%= result.text if result.text %></p>
    </div>
    <div class="card_footer text-right">
       <p> <%= result.date.to_time.strftime("%b %Y") if result.date %> </p>
    </div>
  </div>
<% end %>
