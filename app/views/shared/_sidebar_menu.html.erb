<div class="sidenav">
  <%= image_tag "logo.png", id: "logo", style: "width: 60px; height: 60px;" %>
  <div id="title-nav-bar">
    <p><strong>STALK_</strong><span>HUB</span></p>
  </div>
  <div id="facebook-tab" class="social-media-icon <%= 'active' if @provider == 'facebook' %>">
    <%= link_to '/facebook/results', class: 'link' do %>
      <i class="fa fa-facebook" aria-hidden="true"></i>
    <% end %>
  </div>
  <div id="instagram-tab" class="social-media-icon <%= 'active' if @provider == 'instagram' %>">
    <%= link_to '/instagram/results', class: 'link' do %>
      <i class="fa fa-instagram" aria-hidden="true"></i>
    <% end %>
  </div>
  <div id="twitter-tab" class="social-media-icon <%= 'active' if @provider == 'twitter' %>">
    <%= link_to '/twitter/results', class: 'link'  do %>
      <i class="fa fa-twitter" aria-hidden="true"></i>
    <% end %>
  </div>
  <div id="google-tab" class="social-media-icon <%= 'active' if @provider == 'google' %>">
    <%= link_to '/google/results', class: 'link'  do %>
      <i class="fa fa-google" aria-hidden="true"></i>
    <% end %>
  </div>
  <div id="linkedin-tab" class="social-media-icon <%= 'active' if @provider.nil? %>">
    <%= link_to '/monitor', class: 'link'  do %>
      <i class="fa fa-eye" aria-hidden="true"></i>
    <% end %>
  </div>
  <div class="sidebar-bottom">
    <div class="logout-icon">
      <%= link_to destroy_user_session_path, method: :delete, class: 'link'  do %>
        <i class="fa fa-sign-out" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
</div>


